{
    "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noShadowRestrictedNames": "off",
                "useAwait": "error"
            },
            "style": {
                "noNonNullAssertion": "off",
                "noDefaultExport": "error",
                "useBlockStatements": "error",
                "useConsistentCurlyBraces": "error"
            },
            "a11y": {
                "useSemanticElements": "off"
            },
            "complexity": {
                "useArrowFunction": "error",
                "noImplicitCoercions": "error"
            },
            "nursery": {
                "useConsistentArrowReturn": "error"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "arrowParentheses": "asNeeded"
        }
    },
    "overrides": [
        {
            "includes": [
                "**/vite.config.ts",
                "**/vitest.config.ts",
                "**/capacitor.config.ts",
                "eslint.config.js"
            ],
            "linter": {
                "rules": {
                    "style": {
                        "noDefaultExport": "off"
                    }
                }
            }
        },
        {
            "includes": ["**/evolu/**/*.ts"],
            "linter": {
                "rules": {
                    "correctness": {
                        "useHookAtTopLevel": "off"
                    }
                }
            }
        }
    ]
}
