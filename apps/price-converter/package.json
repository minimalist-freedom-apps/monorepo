{
    "name": "@minimalistic-apps/price-converter",
    "version": "1.0.0",
    "description": "Minimalistic Bitcoin Price Converter",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "dev:android": "CAP_SERVER_URL=http://$(hostname -I | awk '{print $1}'):5173 npx cap run android",
        "build": "vite build",
        "build:android": "vite build && npx cap sync android",
        "preview": "vite preview",
        "typecheck": "tsc --noEmit",
        "generate:icons": "generate-icons"
    },
    "dependencies": {
        "@capacitor/core": "^7.2.0",
        "@capacitor/status-bar": "^7.0.0",
        "@evolu/common": "^7.4.1",
        "@evolu/web": "^2.4.0",
        "@minimalistic-apps/bitcoin": "workspace:*",
        "@minimalistic-apps/components": "workspace:*",
        "@minimalistic-apps/datetime": "workspace:*",
        "@minimalistic-apps/evolu": "workspace:*",
        "@minimalistic-apps/fiat": "workspace:*",
        "@minimalistic-apps/local-storage": "workspace:*",
        "@minimalistic-apps/connect": "workspace:*",
        "@minimalistic-apps/mini-store": "workspace:*",
        "@minimalistic-apps/mobile-native": "workspace:*",
        "@minimalistic-apps/type-utils": "workspace:*",
        "@minimalistic-apps/window": "workspace:*",
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
    },
    "devDependencies": {
        "@capacitor/android": "^7.2.0",
        "@capacitor/cli": "^7.2.0",
        "@minimalistic-apps/app-api": "workspace:*",
        "@minimalistic-apps/tsconfig": "workspace:*",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.2",
        "@testing-library/user-event": "^14.6.1",
        "@types/react": "^19.0.0",
        "@types/react-dom": "^19.0.0",
        "@vitejs/plugin-react": "^4.3.0",
        "jsdom": "^28.0.0",
        "typescript": "^5.3.0",
        "vite": "^7.3.1"
    }
}
