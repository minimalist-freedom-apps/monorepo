{
    "name": "@minimalist-apps/android-sync",
    "version": "1.0.0",
    "description": "Android Sync for Contacts, Calendar, and Tasks",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "dev:android": "../../scripts/dev-android.sh",
        "build": "vite build",
        "build:android": "../../scripts/build-android.sh",
        "build:android:sign": "../../scripts/sign-apk.sh",
        "preview": "vite preview",
        "typecheck": "tsc --noEmit",
        "e2e": "sh -c 'pnpm run e2e:prepare && vitest run --config vitest.e2e.config.ts'",
        "e2e-ci": "sh -c 'pnpm run e2e:prepare && vitest run --config vitest.e2e.config.ts'",
        "e2e:prepare": "pnpm build && npx cap sync android && cd android && ./gradlew assembleDebug",
        "e2e:appium": "appium --base-path / --allow-insecure chromedriver_autodownload",
        "e2e:emulator": "pnpm --filter @minimalist-apps/android-e2e run e2e:emulator"
    },
    "dependencies": {
        "@capacitor/core": "^7.2.0",
        "@evolu/common": "^7.4.1",
        "@minimalist-apps/components": "workspace:*",
        "@minimalist-apps/connect": "workspace:*",
        "@minimalist-apps/fragment-debug": "workspace:*",
        "@minimalist-apps/fragment-evolu": "workspace:*",
        "@minimalist-apps/fragment-local-storage": "workspace:*",
        "@minimalist-apps/fragment-navigator": "workspace:*",
        "@minimalist-apps/fragment-settings": "workspace:*",
        "@minimalist-apps/fragment-theme": "workspace:*",
        "@minimalist-apps/local-storage": "workspace:*",
        "@minimalist-apps/mini-store": "workspace:*",
        "@minimalist-apps/mobile-native": "workspace:*",
        "@minimalist-apps/navigator": "workspace:*",
        "@minimalist-apps/type-utils": "workspace:*",
        "@minimalist-apps/window": "workspace:*",
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
    },
    "devDependencies": {
        "@capacitor/android": "^7.2.0",
        "@capacitor/cli": "^7.2.0",
        "@minimalist-apps/android-e2e": "workspace:*",
        "@minimalist-apps/requirements": "workspace:*",
        "@minimalist-apps/tsconfig": "workspace:*",
        "@types/react": "^19.0.0",
        "@types/react-dom": "^19.0.0",
        "@vitejs/plugin-react": "^4.3.0",
        "appium": "^2.19.0",
        "typescript": "^5.3.0",
        "vite": "^7.3.1"
    }
}
