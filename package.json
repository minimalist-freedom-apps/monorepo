{
    "name": "@minimalist-freedom-apps/monorepo",
    "version": "1.0.0",
    "description": "Minimalist Freedom Apps monorepo",
    "private": true,
    "type": "module",
    "scripts": {
        "check": "biome check --error-on-warnings .",
        "check:fix": "biome check --error-on-warnings --write .",
        "format": "biome format --write .",
        "lint": "pnpm lint:biome && pnpm lint:eslint",
        "lint:biome": "biome lint --error-on-warnings .",
        "lint:biome:fix": "biome lint --error-on-warnings --write .",
        "lint:eslint": "eslint .",
        "lint:eslint:fix": "eslint --fix .",
        "typecheck": "pnpm -r typecheck",
        "test": "vitest run",
        "test:affected": "nx affected -t test",
        "e2e:affected": "nx affected -t e2e-ci",
        "requirements:verify": "requirements-verify",
        "requirements:fix": "requirements-fix",
        "build:clean": "find apps -type d \\( -name android -o -name dist \\) -exec rm -rf {} +",
        "prepare": "husky",
        "knip": "knip"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.13",
        "@minimalist-apps/requirements": "workspace:*",
        "@minimalist-apps/tsconfig": "workspace:*",
        "@stylistic/eslint-plugin": "^5.7.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.2",
        "@types/node": "^22.19.10",
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "eslint": "^9.39.2",
        "husky": "^9.1.7",
        "jsdom": "^28.0.0",
        "knip": "^5.85.0",
        "nx": "^20.4.6",
        "tsx": "^4.0.0",
        "typescript": "^5.3.0",
        "vitest": "^2.0.0"
    }
}
